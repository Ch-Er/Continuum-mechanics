%Geometry of tower in order to obtain constant stress in vertical direction

clear all;
close all;
N=500;
M=1000;
D0=10.0;
rho=7800;
D=zeros(1,N);
x=linspace(0,40, N);
for i = 1:N
	D(i) = sqrt(D0^2 * exp((1*x(i).*pi*D0^2)/(4*M)));
end
plot(x,D,'b','LineWidth',2,x,-D,'b','LineWidth',2)
xlabel('x',"FontSize",20)
ylabel('D',"FontSize",20)
